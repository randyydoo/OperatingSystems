##### But do feel free to learn from it
#####

CC := g++
LINK_FLAGS := -Wall -std=c++17 -pedantic -Werror -g
COMPILE_FLAGS := $(LINK_FLAGS) -c

BIN_NAME := main
BIN := ./$(BIN_NAME)


default:	help


help:
	@echo
	@echo "***** Makefile Menu *****"
	@echo
	@echo "make build       ==> Build the program"
	@echo "make run         ==> Run the program"
	@echo "make debug       ==> Debug the program"
	@echo "make clean       ==> Clean intermediate build files"
	@echo


build:	$(BIN)


run:	$(BIN)
	$(BIN)


$(BIN):	main.o
	$(CC) $(LINK_FLAGS) *.o -o "$@"


main.o:	main.cpp
	$(CC) $(COMPILE_FLAGS) "$<" -o "$@"



clean:
	-rm $(BIN)
	-rm *.o


